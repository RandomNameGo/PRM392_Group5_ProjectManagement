<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Report Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvReportBy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="By: User"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#4A90E2" />

            <TextView
                android:id="@+id/tvReportDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="12sp"
                android:textColor="#005C92" />

        </LinearLayout>

        <!-- Report Content -->
        <TextView
            android:id="@+id/tvReportContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report content goes here..."
            android:textSize="14sp"
            android:textColor="#2C3E50"
            android:layout_marginBottom="12dp"
            android:lineSpacingExtra="2dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEditReport"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Edit"
                android:textSize="12sp"
                android:backgroundTint="#18B694"
                android:textColor="#CDF6F8"
                style="@style/Widget.Material3.Button" />

            <Button
                android:id="@+id/btnDeleteReport"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Delete"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#E74C3C"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>